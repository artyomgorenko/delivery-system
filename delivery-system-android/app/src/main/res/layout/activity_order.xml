<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="orders"
            type="android.databinding.ObservableList&lt;ru.delivery.system.android.models.OrderData&gt;" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:context="com.example.android.databoundrecyclerview.MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            app:entries="@{orders}"
            app:layout="@{@layout/item}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/addOrderButton"
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:text="ADD" />
        </LinearLayout>
    </LinearLayout>
