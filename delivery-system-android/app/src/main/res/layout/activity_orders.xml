<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.delivery.system.android.OrdersActivity">
    <!-- Inside the layout tag it is possible to set the data tag in order to set one or many variables. For this example we are having an User property-->
    <data>
        <variable
            name="order"
            type="ru.delivery.system.android.models.OrderData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!--tools:context=".OrdersActivity"-->
        <TextView
            android:id="@+id/orderIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@{Integer.toString(order.id)}"
            tools:text="OrderId" />

        <TextView
            android:id="@+id/orderDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@{order.description}"
            tools:text="Description" />

        <Button
            android:id="@+id/getInWorkButton"
            android:text="ВЗЯТЬ В РАБОТУ"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/sendRequestButton"
                android:text="Отправить запрос"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--TODO: implement progress bar-->
            <!--<ProgressBar-->

                <!--android:id="@+id/progressBar"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:visibility="visible" />-->

        </RelativeLayout>

        <TextView
            android:id="@+id/reqStatusTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="10dp"
            android:text="STATUS"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</layout>

